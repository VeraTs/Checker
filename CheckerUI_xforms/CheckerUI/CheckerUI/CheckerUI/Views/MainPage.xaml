<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:CheckerUI.ViewModels;assembly=CheckerUI"
             x:Class="CheckerUI.MainPage" Title="Checker Application" BackgroundColor="PowderBlue">
  
    <ContentPage.BindingContext>
        <local:MainPageViewModel/>
    </ContentPage.BindingContext>
    <Grid >
       <Grid.RowDefinitions>
           <RowDefinition Height="*"/>
           <RowDefinition Height=".25*"/>
           <RowDefinition Height=".25*"/>
           <RowDefinition Height=".25*"/>
           <RowDefinition Height="*"/>
       </Grid.RowDefinitions>
       <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Editor Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Placeholder="Enter User name here " 
                BackgroundColor="Beige"  VerticalOptions="EndAndExpand" MaxLength="20" Text="{Binding UserName }"></Editor>
        <Editor Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Placeholder="Enter password here" 
                BackgroundColor="Beige" VerticalOptions="EndAndExpand" Text="{Binding Password}" MaxLength="20" ></Editor>
        <Button x:Name=" EnterButton" 
                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Enter" BackgroundColor="Chartreuse" Font="Large"  VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"
                 Command="{Binding SaveCommand}"></Button>
        <Button x:Name="SignButton"
                Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="Sign-up" BackgroundColor="Coral" Font="Large" 
                HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                Command="{Binding EraseCommand}"></Button>
        <Button x:Name="ExitButton"
                Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="1" Text="Exit" 
                BackgroundColor="SlateGray" Font="Large" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                Command="{Binding ExitCommand}"></Button>
            <Image Source="imageBurger" 
                   Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="1" ></Image>
        <Image Source="CheckTitle"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="1" Aspect="Fill"  VerticalOptions="Center"></Image>
       

   </Grid>

</ContentPage>
