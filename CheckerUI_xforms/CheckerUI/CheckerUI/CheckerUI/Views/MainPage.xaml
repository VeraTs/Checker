<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:CheckerUI.ViewModels;assembly=CheckerUI"
             x:Class="CheckerUI.MainPage" Title="Checker Application" BackgroundColor="PowderBlue">

    <ContentPage.BindingContext>
        <local:MainPageViewModel/>
    </ContentPage.BindingContext>

    <StackLayout>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height=".25*"/>
                <RowDefinition Height=".25*"/>
                <RowDefinition Height=".25*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Entry Placeholder="UserName" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
            </Entry>
                <Entry 
                Placeholder="Password" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1"
               IsPassword="{Binding  Path=HidePassword}">
            </Entry>
            <Button 
                x:Name=" EnterButton" 
                    Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Text="Enter" BackgroundColor="Chartreuse" Font="Large" 
                    HorizontalOptions="FillAndExpand"
                    Command="{Binding EnterCommand}">
            </Button>
            <Button 
            x:Name="SignButton"
                Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="Sign-up" BackgroundColor="Coral" Font="Large" 
                HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                Command="{Binding SignUpCommand}">
            </Button>
            <Button
            x:Name="ExitButton"
                Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="1" Text="Exit" 
                BackgroundColor="SlateGray" Font="Large" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                Command="{Binding ExitCommand}">
            </Button>
            <Image 
                Source="Logo" 
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Aspect="AspectFill">
            </Image>
        </Grid>
    </StackLayout>
</ContentPage>
